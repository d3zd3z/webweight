  <groupId>org.davidb</groupId>
  <artifactId>webweight</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>webweight</name>
  <url>http://www.davidb.org/weight</url>

  <build>
    <plugins>
      <plugin>
	<groupId>com.theoryinpractise</groupId>
	<artifactId>clojure-maven-plugin</artifactId>
	<version>1.1</version>
	<configuration>
	  <!-- Ugh, I don't want to set this to this.  Perhaps a
