	  <script>src/util/clojure/setup_repl.clj</script>
	  <testScript>src/test/clojure/test.clj</testScript>
	</configuration>
	<executions>
	  <execution>
	    <id>compile</id>
	    <phase>compile</phase>
	    <goals>
	      <goal>compile</goal>
	    </goals>
	  </execution>
	  <!--
	  <execution>
	    <id>test</id>
	    <phase>test</phase>
	    <goals>
	      <goal>test</goal>
	    </goals>
	  </execution>
